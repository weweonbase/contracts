{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Hardhat Script",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/scripts/getBlockNumber.js",
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["run-script", "--network", "localhost"],
        "runtimeExecutable": "npx",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  